<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dip"
                android:background="@drawable/login_bg_btn_shape">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginBottom="30dp">
        <ImageView
                android:id="@+id/item_detail_login_notice_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dip"
                android:layout_centerHorizontal="true"
                android:background="@drawable/login_person"/>
        <TextView
                android:id="@+id/item_deatil_login_notice_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#838383"
                android:text="亲，购买商品只能使用淘宝账号哟"
                android:textSize="13dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_below="@+id/item_detail_login_notice_img"
                android:layout_centerHorizontal="true"/>
        <Button
                android:id="@+id/item_detail_login_notice_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="使用淘宝账号登录"
                android:textSize="18dp"
                android:textColor="#838383"
                android:background="@drawable/login_notice_btn"
                android:layout_below="@+id/item_deatil_login_notice_txt"
                android:layout_centerHorizontal="true"/>
        <View android:layout_width="fill_parent" android:layout_height="20dp"
              android:layout_below="@id/item_detail_login_notice_btn"/>

    </RelativeLayout>
</RelativeLayout>